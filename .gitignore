# only track specific .config files
.config/**
!.config/alacritty**
!.config/kitty**
!.config/fontconfig**
!.config/flameshot**
!.config/VSCodium
!.config/VSCodium/User
!.config/VSCodium/User/settings.json
!.config/VSCodium/extensions.list
!.config/systemd
!.config/systemd/user
!.config/systemd/user/*.service
!.config/dotfiles**
!.config/openstack
!.config/openstack/clouds.template.yaml
!.config/pacman.conf
!.config/bspwm
!.config/bspwm/**
!.config/sxhkd
!.config/sxhkd/**
!.config/polybar
!.config/polybar/config.ini
!.config/polybar/launch.sh
!.config/polybar/scripts
!.config/polybar/scripts/*
!.config/polybar/modules
!.config/polybar/modules/*
!.config/picom
!.config/picom/picom.conf

# only track specific .ssh files
.ssh/**
!.ssh/authorized_keys

# ignore font uuid file
.fonts/.uuid

# only track specific .icons files
.icons/**
!.icons/default**

# ignore completion files
.bash_config.d/completion.d/*

# only track specific .local files
.local/**
!.local/share/fonts

# ignore local config.sh file
.bash_config.d/config.sh

.bash_config.d/specific.d/*

# ignore venvs content
.venvs/*/*
